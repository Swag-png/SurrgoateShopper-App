<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Customer Details"
            android:textSize="38sp"
            android:textStyle="bold"
            android:textColor="@color/dark_forest_green"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/fullname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Full Name:"
                android:textColor="@color/dark_forest_green"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lastname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Last Name:"
                android:textColor="@color/dark_forest_green"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/user_lastname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Address:"
                android:textColor="@color/dark_forest_green"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/user_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Total Orders:"
                android:textColor="@color/dark_forest_green"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/user_orders"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/pastorders"
            android:layout_width="176dp"
            android:layout_height="40sp"
            android:backgroundTint="@color/dark_forest_green"
            android:layout_marginTop="75dp"
            android:text="View Past Orders" />

        <Button
            android:id="@+id/change"
            android:layout_width="176dp"
            android:layout_height="40sp"
            android:backgroundTint="@color/dark_forest_green"
            android:text="Change Information" />
    </LinearLayout>
</FrameLayout>
